<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />
<androidx.constraintlayout.widget.Guideline
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/gd1"
    app:layout_constraintGuide_percent="0.33"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/gd2"
        app:layout_constraintGuide_percent="0.66"/>

    <ImageView
        android:layout_marginRight="1dp"
        android:orientation="horizontal"
        android:id="@+id/im1"
        android:padding="75dp"
        android:src="@drawable/ic_library_books_black_24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gd3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/im3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="My story"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/im3"
        android:textColor="#f00000"
        app:layout_constraintEnd_toEndOf="@id/gd1"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="70dp"/>

    <ImageView
        android:layout_marginLeft="1dp"
        android:padding="75dp"
        android:orientation="horizontal"
        android:id="@+id/im2"
        android:src="@drawable/ic_gradient_black_24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/gd3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/im3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Schedule"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/gd3"
        app:layout_constraintBottom_toTopOf="@id/im3"
        android:textColor="#f00000"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="0dp"/>


    <ImageView
        android:id="@+id/im3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/city"
        app:layout_constraintBottom_toTopOf="@id/im4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im1" />

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_radio_button_checked_black_24dp"
        app:layout_constraintStart_toStartOf="@id/gd1"
        app:layout_constraintTop_toBottomOf="@id/im1"
        app:layout_constraintEnd_toEndOf="@id/gd2"/>

    <ImageView
        android:layout_marginTop="110dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_place_black_24dp"
        app:layout_constraintStart_toStartOf="@id/gd1"
        app:layout_constraintTop_toBottomOf="@id/im1"
        app:layout_constraintEnd_toEndOf="@id/gd2"/>


    <TextView
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK-IN"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@id/gd1"
        app:layout_constraintTop_toBottomOf="@id/im1"
        app:layout_constraintEnd_toEndOf="@id/gd2"
        android:layout_marginTop="32dp"
        android:textColor="#fff"/>
    <ImageView
        android:layout_marginEnd="1dp"
        android:id="@+id/im4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/im3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gd3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_map_black_24dp"
        android:padding="75dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Map"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im3"
        android:textColor="#f00000"
        app:layout_constraintEnd_toEndOf="@id/gd1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="160dp"/>
    <ImageView
        android:layout_marginStart="1dp"
        android:id="@+id/im5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/im3"
        app:layout_constraintStart_toStartOf="@id/gd3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_message_black_24dp"
        android:padding="75dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Message"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/gd3"
        app:layout_constraintTop_toBottomOf="@id/im3"
        android:textColor="#f00000"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>